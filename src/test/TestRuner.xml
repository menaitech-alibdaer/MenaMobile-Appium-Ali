<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Testing">
    <listeners>
        <listener class-name="bases.AnnotationTransformer" />
        <listener class-name="bases.Listener" />
    </listeners>

    <test name="LoginAndConnectivity" parallel="classes" thread-count="1">
        <parameter name="browser" value="chrome_headless" />
        <parameter name="version" value="AUG" />
        <parameter name="lite" value="false" />
        <parameter name="platform" value="Android" />

        <classes>
            <class name="LoginTest" />
        </classes>
    </test>

    <test name="VacationRequest" parallel="classes" thread-count="1">
        <parameter name="browser" value="chrome_headless" />
        <parameter name="version" value="AUG" />
        <parameter name="lite" value="false" />
        <parameter name="platform" value="Android" />

        <classes>
            <class name="VacationRequest" />
        </classes>
    </test>

    <test name="LeaveRequest" parallel="classes" thread-count="1">
        <parameter name="browser" value="chrome_headless" />
        <parameter name="version" value="AUG" />
        <parameter name="lite" value="false" />
        <parameter name="platform" value="Android" />

        <classes>
            <class name="LeaveRequest" />
        </classes>
    </test>

    <test name="OvertimeRequest" parallel="classes" thread-count="1">
        <parameter name="browser" value="chrome_headless" />
        <parameter name="version" value="AUG" />
        <parameter name="lite" value="false" />
        <parameter name="platform" value="Android" />

        <classes>
            <class name="OvertimeRequest" />
        </classes>
    </test>

</suite>